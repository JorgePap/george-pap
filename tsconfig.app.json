{
  "compilerOptions": {
    "target": "ESNext",  // Upgrade to ESNext for modern JavaScript
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],  // Align lib with target version
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",  // Keep this if Vite works fine with it
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "@domain": ["src/domain/index.ts"],
      "@router": ["src/router/index.ts"],
      "@ui": ["src/ui/index.ts"],
      "@translations": ["src/translations/index.ts"],
      "@assets": ["src/assets/index.ts"]
    }
  },
  "include": ["src"]
}
